# Apache Docker Project - Configuración Central
# Versión: 3.0

# Configuración del proyecto
LAB_NAME=apache-docker-lab
LAB_VERSION=3.0
LAB_ENVIRONMENT=development

# Configuración de logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Configuración de red
DMZ_SUBNET=172.18.1.0/24
LAN_SUBNET=172.18.2.0/24
ATTACKER_SUBNET=172.18.3.0/24
MONITORING_SUBNET=172.18.4.0/24

# Puertos de servicios
APACHE_PORT=9990
DVWA_PORT=9998
JUICE_SHOP_PORT=9997
WEBGOAT_PORT=9996
MUTILLIDAE_PORT=9995
SSH_HONEYPOT_PORT=2222
FTP_PORT=21
MYSQL_PORT=3306

# Configuración de seguridad
MYSQL_ROOT_PASSWORD=SecurePassword123!
DVWA_DB_PASSWORD=DVWASecure456!
FTP_USER=ftpuser
FTP_PASSWORD=FTPSecure789!

# Configuración de backup
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# Configuración de monitoreo
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
KIBANA_PORT=5601

# Configuración de desarrollo
DEBUG_MODE=false
ENABLE_PROFILING=false

# Configuraciones de timeout para conexiones lentas

# Configuraciones de timeout para conexiones lentas

# Configuraciones de timeout para conexiones lentas
COMPOSE_HTTP_TIMEOUT=600
DOCKER_CLIENT_TIMEOUT=600
COMPOSE_PROJECT_NAME=apache-docker-lab
